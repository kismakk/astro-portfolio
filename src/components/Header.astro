import "../styles/global.css";
---

<header>
  <nav>
    <ul class="menu">
      <li><a href="#">Home</a></li>
      <li><a href="#">Projects</a></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Contact</a></li>
    </ul>
  </nav>
</header>

<style>
  .menu {
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: space-around;
    align-items: stretch;
    height: 70px;
  }

  .menu li {
    display: inline-block;
  }

  .menu > li:hover > a {
    color: #755a30;
  }

  .menu > li:hover > a::before {
    visibility: visible;
    scale: 1 1;
  }

  .menu > li a {
    color: #606060;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 7px;
    text-decoration: none;
    position: relative;
    height: 100%;
  }

  .menu > li > a::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 3px;
    bottom: 3px;
    left: 0px;
    background-color: #755a30;
    transition: all 0.2s ease-in-out;
    scale: 0 0;
    visibility: hidden;
  }
</style>
